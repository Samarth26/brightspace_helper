{
  "manifest_version": 3,
  "name": "Brightspace LLM Assistant",
  "version": "1.0.0",
  "description": "Scans Brightspace for course files and uses Llama LLM to answer questions about deadlines, syllabus, and more",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity",
    "offscreen",
    "tabs"
  ],
  "host_permissions": [
    "*://*.brightspace.com/*",
    "*://*.d2l.com/*",
    "*://*.brightspace.nyu.edu/*",
    "*://brightspace.nyu.edu/*",
    "*://localhost/*",
    "https://www.googleapis.com/*",
    "https://router.huggingface.co/*",
    "https://api-inference.huggingface.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["pdf.min.js", "pdf.worker.min.js", "offscreen.html", "offscreen.js", "renderer.html", "renderer.js", "page-pdf-renderer.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "899017621392-e4plvimjp83231ttqq5j0iq5eatjltjc.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/drive.file"]
  }
}
